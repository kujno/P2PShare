<Window x:Class="P2PShare.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P2PShare.GUI"
        mc:Ignorable="d"
        Title="P2PShare" Height="450" Width="800"
        Background="#333333"
        WindowStyle="None"
        ResizeMode="CanMinimize"
        BorderThickness="1px">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#292929"/>
            <Setter Property="Foreground" Value="#c2c2c2"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#c2c2c2"/>
                    <Setter Property="Foreground" Value="#292929"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="Foreground" Value="#c2c2c2"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="MinWidth" Value="120px"/>
            <Setter Property="Height" Value="20px"/>
            <Setter Property="Margin" Value="0, 5px, 0, 0"/>
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="Foreground" Value="#c2c2c2"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="18px"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" MouseDown="ToolBar_MouseDown" Background="#333333">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <TextBlock Text="State:" VerticalAlignment="Center" Margin="5px, 0, 0, 0"/>
                <TextBlock x:Name="State" Text="Disconnected" VerticalAlignment="Center" Margin="5px, 0, 0, 0" Foreground="Red"/>
                <Button x:Name="Cancel" Content="Cancel" Margin="6px, 0, 0, 0" Height="20px" Width="50" VerticalAlignment="Center" Visibility="Collapsed" Click="Cancel_Click"/>
            </StackPanel>
            
            <TextBlock Grid.Column="1" Text="P2PShare" HorizontalAlignment="Center" FontSize="20px" FontFamily="Arial Black"/>

            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0px, 3px, 3px, 3px">
                <Button x:Name="Minimize" Content="_" Width="32px" Height="Auto" Click="Minimize_Click" FontSize="12px" FontWeight="UltraBlack"/>
                <Button x:Name="Close" Content="X" Width="32px" Height="Auto" Click="Close_Click" Margin="3px, 0px, 0px, 0px" FontSize="12px" FontWeight="Black"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" Margin="10px">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Vertical" Grid.Column="0">
                <GroupBox Header="Interface:" Foreground="#c2c2c2" BorderThickness="0px" VerticalAlignment="Top" FontFamily="Arial">
                    <ComboBox x:Name="Interface" SelectionChanged="Interface_SelectionChanged"/>
                </GroupBox>
                <Button x:Name="Refresh" Grid.Column="0" Height="24px" Width="80px" Margin="0, 4px, 0, 0" Click="Refresh_Click">Refresh</Button>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Vertical">
                <TextBlock x:Name="YourIP" Text="Your IP address:" HorizontalAlignment="Center" FontSize="20" FontWeight="Medium"/>
                <StackPanel Orientation="Horizontal" Margin="0, 20px, 0, 0" HorizontalAlignment="Center">
                    <GroupBox Header="Listening port:" Width="100">
                        <TextBox x:Name="Port" Width="80" Margin="0, 5px, 0, 0"/>
                    </GroupBox>
                    <Button x:Name="Listen" Content="Listen" Height="22px" Width="60px" VerticalAlignment="Center" Margin="0, 0, 0, -13" Click="Listen_Click"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Column="1">
                    <GroupBox Header="Remote IP address:" Width="160">
                        <TextBox x:Name="RemoteIP" Width="160" Margin="0, 5px, 0, 0"/>
                    </GroupBox>
                    <Button x:Name="Connect" Content="Connect" Height="22px" Width="60px" VerticalAlignment="Center" Margin="0, 0, 0, -13" Click="Connect_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>