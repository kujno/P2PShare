<Window x:Class="P2PShare.Send_Receive"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P2PShare"
        mc:Ignorable="d"
        Title="Send_Receive" Height="225" Width="400"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#333333"
        BorderThickness="1px"
        MouseDown="Window_MouseDown">

    <TextBlock x:Name="Text" FontSize="20px" FontFamily="Arial" Foreground="#c2c2c2" HorizontalAlignment="Center" Margin="0, 100px, 0, 0" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" TextAlignment="Center"/>
</Window>
